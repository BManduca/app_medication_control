# Ambiente da aplicação: development ou production
FLASK_ENV=development

# Chave secreta para sessões e autenticação (gere uma nova com secrets.token_hex(32))
SECRET_KEY=coloque_sua_chave_aqui

# Banco de dados para desenvolvimento (SQLite por padrão)
DEV_DATABASE_URL=sqlite:///dev.db

# Banco de dados para produção (ex: PostgreSQL na nuvem)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_do_banco